!!!
%html
  %head
    %title 
      = @title  
    = stylesheet_link_tag 'application'
    = csrf_meta_tag
    = javascript_include_tag :application
    %body
      .navbar
        .navbar-inner
          .container
            .row
              .span8
                %img#logo(src="/assets/logo.png" alt="Logo")
                %a.title.brand(href="/") Stashboard
              .span4.user
                - if signed_in?
                  = current_user.email
                  | 
                  = link_to "[Sign out]", sign_out_path, :method => :delete
                - else 
                  = link_to "[Sign in]", sign_in_path
      .container
        - if flash[:notice]
          .alert.alert-success
            = flash[:notice]
        - if flash[:error]
          .alert.alert-error
            = flash[:error]
        = yield

